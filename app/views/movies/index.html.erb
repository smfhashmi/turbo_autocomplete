<p style="color: green"><%= notice %></p>


<%= form_with url: search_movies_path, method: :post, data: {controller: "debounce", debounce_target: "form"} do |f|%>
  <%= f.search_field :title_search, data: {action: "input -> debounce#search"} %>
<% end %>

<div id="search_results">
</div>

<h1>Movies</h1>

<div id="movies">
  <% @movies.each do |movie| %>
    <%= render movie %>
    <p>
      <%= link_to "Show this movie", movie %>
    </p>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path %>
