<p style="color: green"><%= notice %></p>

<div data-controller="debounce"></div>

<%= form_with url: search_movies_path, method: :post do |f|%>
  <%= f.search_field :title_search, oninput: "this.form.requestSubmit()" %>
<% end %>

<div id="search_results">
</div>

<h1>Movies</h1>

<div id="movies">
  <% @movies.each do |movie| %>
    <%= render movie %>
    <p>
      <%= link_to "Show this movie", movie %>
    </p>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path %>
